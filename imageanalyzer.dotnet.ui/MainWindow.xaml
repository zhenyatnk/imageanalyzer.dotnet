<mui:ModernWindow x:Class="imageanalyzer.dotnet.ui.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  Name="MainW"
                  Title="imageanalyzer.dotnet.ui"
                  Style="{StaticResource BlankWindow}" Height="206">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Margin="8,8,8,8">
                <Button Content="Open project" Click="OpenProject_Click" Margin="0,0,0,2" />
                <Button Content="Add folder" Click="AddFolder_Click" Margin="0,0,0,2" />
                <Button Content="Add files" Click="AddFiles_Click" Margin="0,0,0,2" />
            </StackPanel>
            <StackPanel Name="StatusStack" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <TextBlock Text="Analyzing..." HorizontalAlignment="Center"  Margin="0,0,0,4" />
                <ProgressBar Name="ProgressAnalyze" Height="3" Width="250" Margin="0,0,0,4" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</mui:ModernWindow>
